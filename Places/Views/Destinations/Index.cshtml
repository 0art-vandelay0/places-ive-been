<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>My To-Do List!</title>
        <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
        crossorigin="anonymous">
    </head>
    <body>
        @using Places.Models;

        @if (Model.Count == 0)
        {
            <p>There are no destinations in the list.</p>
        }
        <ul>
            @foreach (Destination destination in Model)
            {
                @* <li>@destination.Description</li> *@
                <li><a href='/destinations/@destination.Id'>@destination.CityName</a></li>
            }
        </ul>
        <form action="/destinations/delete" method="post">
            <button type="submit" name="button">Clear All destinations</button>
        </form>
        <br>
        <br>
        <a href="/destinations/new">Add a new destination.</a>
    </body>
</html>